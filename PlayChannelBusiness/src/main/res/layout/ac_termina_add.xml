<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical">

    <include layout="@layout/title_layout" />

    <LinearLayout

        android:id="@+id/ll_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:background="@drawable/round_bg_fff"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/qr_code"
            android:layout_width="240dp"
            android:layout_height="240dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_fff"
        android:orientation="vertical"
        android:padding="20dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/termina_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备：Te0012234"
                android:textColor="@color/color_32"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="状态：已启用"
                android:textColor="@color/color_32"
                android:textSize="15sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/orgName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="商家：蜂之谷游乐场"
            android:textColor="@color/color_32"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/pduName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="产品：过山车"
            android:textColor="@color/color_32"
            android:textSize="15sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="配置者：张三"
                    android:textColor="@color/color_32"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/edit_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="配置时间：2016-08-15 12:12:12"
                    android:textColor="@color/color_32"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/update_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="近期访问时间：2016-08-15 12:12:12"
                    android:textColor="@color/color_32"
                    android:textSize="15sp" />

            </LinearLayout>

            <com.ninethree.palychannelbusiness.view.CircleImageView
                android:id="@+id/headImg"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/default_head"
                app:civ_border_color="@color/line"
                app:civ_border_width="1dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
